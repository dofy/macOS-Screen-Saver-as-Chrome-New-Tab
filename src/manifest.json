{
  "manifest_version": 3,
  "name": "Macify - macOS screen saver videos new tab",
  "version": "1.3",
  "description": "Replace new tab with macOS's screen saver videos. Created by Jason Ng and Setilis.",
  "permissions": ["storage", "activeTab","geolocation","scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["*://chat.openai.com/*"],
  "chrome_url_overrides": {
    "newtab": "popup.html"
  }
}